<body class="sign-wrapper">
  <div class="sign-body">
    <h1 class="sign-header">LOG IN</h1>
    <div class="sign-form-wrapper">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="sign-form">
          <%= f.label :email, "Email: ", class: "each-sign-form" %><br>
          <%= f.text_field :email, class: "each-sign-form"%>
        </div>
        <div class="sign-form">
          <%= f.label :password, "Password: ", class: "each-sign-form" %><br>
          <%= f.password_field :password, class: "each-sign-form" %>
        </div>
        <%= f.submit "Start Wotacolle", class: "sign-btn" %>
      <% end %>
    </div>
  </div>
</body>